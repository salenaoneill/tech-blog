<section>
    <a href="/dashboard">Return to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post_title" type="text" value="{{post.title}}"/>
        </div>
        <div>
            <textarea name="post-text">{{post.post_text}}</textarea>
        </div>
        <button type="submit">Save Post Update</button>
        <button type="submit" class="delete-post-button">Delete Post</button>
    </form>
</section>

<form class="add-comment">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>