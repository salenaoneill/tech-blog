<article class="post">
    <header class="title">
        <div>
            <a href ="/post/{{id}}">{{title}}</a>
            <div>Post by: {{user.username}} on {{format_date created_at}}</div>
        </div> 
        <div class="content">
            <p>{{ post_text }}</p>
        </div>
    </header>
</article>